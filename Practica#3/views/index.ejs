<!DOCTYPE html>
<html>
<head>
  <title>Libros</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container">
  <h1 class="my-4">Lista de Libros</h1>
  <a href="/add" class="btn btn-primary mb-3">Agregar Libro</a>
  <table class="table table-bordered table-hover">
    <thead class="table-dark">
      <tr>
        <th>ID</th><th>Título</th><th>Autor</th><th>Género</th><th>Año</th><th>Acciones</th>
      </tr>
    </thead>
    <tbody>
    <% libros.forEach(libro => { %>
      <tr>
        <td><%= libro.id %></td>
        <td><%= libro.titulo %></td>
        <td><%= libro.autor %></td>
        <td><%= libro.genero %></td>
        <td><%= libro.anio_publicacion %></td>
        <td>
          <a href="/edit/<%= libro.id %>" class="btn btn-warning btn-sm">Editar</a>
          <a href="/delete/<%= libro.id %>" class="btn btn-danger btn-sm" onclick="return confirm('¿Eliminar este libro?')">Eliminar</a>
        </td>
      </tr>
    <% }) %>
    </tbody>
  </table>
</div>
</body>
</html>
